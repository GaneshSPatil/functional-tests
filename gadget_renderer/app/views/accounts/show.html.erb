<p>
  <b>Bank:</b>
  <%=h @account.bank.name %>
</p>

<p>
  <b>Number:</b>
  <%=h @account.account_number %>
</p>

<% if @account.balance %>
<p>
   <b> Balance </b>
   <%=h @account.balance  %>
</p>
<% else %>
  <p> <%= link_to 'Load balance', @account.bank.authorize_url(@account.bank.id), :target => 'new' %> </p>
<% end -%>

<%= link_to 'Edit', edit_user_account_path(current_user, @account) %> |
<%= link_to 'Back', user_accounts_path %>