<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Bank</th>
    <th>Number</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h account.bank.name %></td>
    <td><%=h account.account_number %></td>
    <td><%= link_to 'Show', [current_user, account] %></td>
    <td><%= link_to 'Edit', edit_user_account_path(current_user, account) %></td>
    <td><%= link_to 'Destroy', [current_user, account], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_user_account_path %>